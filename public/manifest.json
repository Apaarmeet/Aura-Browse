{
    "manifest_version": 3,
    "name": "Aura Browse - Voice Assistant",
    "version": "1.0.0",
    "description": "AI-powered voice assistant for browser automation",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Aura Browse"
    },
    "background": {
      "service_worker": "src/background/background.ts",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["src/content/content-script.ts"],
        "run_at": "document_start",
        "all_frames": true
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }