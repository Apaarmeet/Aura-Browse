{
    "manifest_version": 3,
    "name": "Voice Assistant",
    "version": "1.0.0",
    "description": "AI-powered voice assistant for browser automation",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Voice Assistant"
    },
    "background": {
      "service_worker": "src/background/background.ts"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content/content-script.ts"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }